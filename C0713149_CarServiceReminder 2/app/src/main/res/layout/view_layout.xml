<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/serviceId"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="Id:"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/serviceDate"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="Service Date:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/odometer"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="Odometer:"
                android:textSize="15dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/description"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="Description:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/cost"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="Cost:"
                android:textSize="15dp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/nextservice"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="Next Service:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/nextChange"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="Next Change:"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/serviceStationName"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="Station Name:"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/serviceType"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="Service Type:"
                android:textSize="15dp" />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>